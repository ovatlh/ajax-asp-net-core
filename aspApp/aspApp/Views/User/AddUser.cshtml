@model aspApp.Models.User

@{
    Layout = null;
}

<script>
    function closeModalButton() {
        closeModal()
    }

    $(function () {
        $('#submitAdd').on('click', function (evt) {
            evt.preventDefault();
            $.post('User/AddUser', $('#formAddUser').serialize(), function () {
                //alert('Posted using jQuery');

                submited_form()
            });
        });
    });
</script>

<form asp-action="AddUser" method="post" id="formAddUser">
    <div class="popup_div shadow-2 modal_none" id="modalAdd">
        <div>
            <a class="close_modal" onclick="closeModalButton()">X</a>
            <h5 class="title_modal">Add new User</h5>
        </div>
        <!-- <label for="">#: 1</label> -->
        <!-- <label for="">Id: 1</label> -->
        <div class="popup_items">
            <label for="">Username:</label>
            <input asp-for="@Model.Username" />
            <label for="">Phone:</label>
            <input asp-for="@Model.Phone" />
            <label for="">eMail:</label>
            <input asp-for="@Model.EMail" />
            <label for="">Birthday:</label>
            <input asp-for="@Model.Birthday" />
        </div>

        <a class="action_good" id="submitAdd">Add</a>
    </div>
</form>