@model aspApp.Models.User

@{
    Layout = null;
}

<script>
    function closeModalButton() {
        closeModal()
    }
</script>

<form asp-action="DeleteUser" method="post" id="formDeleteUser">
    <div class="popup_div shadow-2 modal_none" id="modalDelete">
        <div>
            <a class="close_modal" onclick="closeModalButton()">X</a>
            <h5 class="title_modal">Delete user</h5>
        </div>
        <div class="popup_items">
            <label for="">Id:</label>
            <input asp-for="@Model.Id" readonly />
            <label for="">Username:</label>
            <input asp-for="@Model.Username" readonly />
            <label for="">Phone:</label>
            <input asp-for="@Model.Phone" readonly />
            <label for="">eMail:</label>
            <input asp-for="@Model.EMail" readonly />
            <label for="">Birthday:</label>
            <input asp-for="@Model.Birthday" readonly />
        </div>

        <a class="action_bad">Delete</a>
    </div>
</form>