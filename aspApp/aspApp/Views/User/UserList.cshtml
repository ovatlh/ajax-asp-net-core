@model IEnumerable<aspApp.Models.User>

@{
    int x = 1;
}

<script>
    function addNewUser_OnClick() {
        loadAddUser('@Url.Action("AddUser", "User")')
    }

    function editUser_OnClick(reference) {
        var url = '@Url.Action("EditUser", "User", new { id = "-1" })';
        url = url.replace("-1", reference);

        loadEditUser(url)
    }

    function deleteUser_OnClick(reference) {
        var url = '@Url.Action("DeleteUser", "User", new { id = "-1" })';
        url = url.replace("-1", reference);

        loadDeleteUser(url)
    }
</script>

<div class="index_div_content">
    <a class="action_add_new_user" onclick="addNewUser_OnClick()">Add new User</a>
    <ul>
