                        <label for="">Birthday: 1</label>
                    </div>
                    <div>
                        <a href="edit">Edit</a>
                        <a href="delete">Delete</a>
                    </div>
                </div>
            </li>*@

        @foreach (var item in Model)
        {
            <li>
                <div>
                    <div>
                        <label for="">#: @x</label>
                        <label for="">Id: @item.Id</label>
                        <label for="">Username: @item.Username</label>
                        <label for="">Phone: @item.Phone</label>
                        <label for="">eMail: @item.EMail</label>
                        <label for="">Birthday: @item.Birthday.ToString("dd - MMMM - yyyy")</label>
                    </div>
                    <div>
                        <a onclick="editUser_OnClick(@item.Id)">Edit</a>
                        <a onclick="deleteUser_OnClick(@item.Id)">Delete</a>
                    </div>
                </div>
            </li>

            x++;
        }
    </ul>
</div>  